{
  "name": "dotsama-wallets",
  "version": "1.0.0",
  "repository": "https://github.com/SaltyCucumber/dotsama-wallets.git",
  "author": "saltycucumber",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:core": "cd packages/core && yarn build",
    "build:injected-wallets": "cd packages/injected-wallets && yarn build",
    "build:react": "cd packages/react && yarn build",
    "build-watch:core": "cd packages/core && yarn build:watch",
    "build-watch:injected-wallets": "cd packages/injected-wallets && yarn build:watch",
    "build-watch:react": "cd packages/react && yarn build:watch",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\"",
    "start": "yarn build:core && yarn build:injected-wallets && yarn build:react && cd packages/react-demo && yarn start"
  }
}
